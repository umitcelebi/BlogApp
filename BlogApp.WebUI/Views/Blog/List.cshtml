@model IEnumerable<Blog>

@{
    ViewData["Title"] = "Blog List";
}
<hr />
<a class="btn btn-success" asp-action="Create">Create Blog</a>
<a class="btn btn-info btn-sm float-right" asp-controller="Category" asp-action="Create">Create Category</a>
<hr />
<table class="table table-striped">
    <thead>
        <tr>
            <th>Blog ID</th>
            <th>Image</th>
            <th>Title</th>
            <th>Body</th>
            <th>Added Date</th>
            <th>Is Approved</th>
            <th>Is Slider</th>
            <th>Is Home</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var blog in Model)
        {
            <tr>
                <td>@blog.BLogId</td>
                <td><img src="~/img/@blog.Image" width="100" /></td>
                <td>@blog.Title</td>
                <td>@blog.Body</td>
                <td>@blog.AddedDate</td>
                <td>
                    @if (blog.IsApproved)
                    {
                        <i class="fa fa-check-circle"></i>
                    }
                    else
                    {
                        <i class="fa fa-times-circle"></i>
                    }
                </td>
                <td>
                    @if (blog.IsSlider)
                    {
                        <i class="fa fa-check-circle"></i>
                    }
                    else
                    {
                        <i class="fa fa-times-circle"></i>
                    }
                </td>
                <td>
                    @if (blog.IsHome)
                    {
                        <i class="fa fa-check-circle"></i>
                    }
                    else
                    {
                        <i class="fa fa-times-circle"></i>
                    }
                </td>
                <td>
                    <a class="btn btn-primary"
                       asp-controller="blog"
                       asp-action="edit"
                       asp-route-id="@blog.BLogId">
                        Update
                    </a>
                    <a class="btn btn-danger"
                       asp-controller="blog"
                       asp-action="delete"
                       asp-route-id="@blog.BLogId">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
